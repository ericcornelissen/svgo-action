# Check out EditorConfig at: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2
max_line_length = unset

[{*.test.ts,*.mock.ts}]
max_line_length = 120 # Allow longer lines in test files for test descriptions

[*.md]
max_line_length = unset # Handled by markdownlint

[test/fixtures/*.json]
max_line_length = unset # Irrelevant for fixtures

[lib/*]
max_line_length = unset # Irrelevant for generated files

[.nsprc]
max_line_length = unset # Not practical for this configuration file
