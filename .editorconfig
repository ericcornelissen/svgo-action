# Check out EditorConfig at: https://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,cjs}]
indent_size = 2
indent_style = space

[*.{json,jsonc}]
indent_size = 2
indent_style = space
max_line_length = unset

[*.md]
indent_size = unset
indent_style = space
max_line_length = unset # Handled by markdownlint

[*.sh]
indent_size = 2
indent_style = space

[*.svg]
indent_size = 2
indent_style = space

[*.ts]
indent_size = 2
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space
max_line_length = unset

[lib/*]
indent_size = unset
indent_style = space
max_line_length = unset

[Dockerfile]
indent_style = tab

[LICENSE]
indent_size = unset
indent_style = space
