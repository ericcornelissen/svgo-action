# Check out EditorConfig at: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2
max_line_length = unset

[*.md]
max_line_length = unset # Handled by markdownlint

[lib/*.js] # Disable rules for generated files
max_line_length = unset
insert_final_newline = false
