# Check out EditorConfig at: https://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,cjs}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
max_line_length = unset

[*.md]
indent_size = unset
indent_style = space
max_line_length = unset # Handled by markdownlint

[*.sh]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

[*.{ts}]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = unset

[lib/*]
indent_size = unset
indent_style = space
max_line_length = unset

[Dockerfile]
indent_style = tab

[LICENSE]
indent_size = unset
indent_style = space
